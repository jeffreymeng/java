package image;

import java.awt.*;
import java.awt.event.*;

import javax.swing.*;

public class BackgroundPanel extends JPanel implements ActionListener, KeyListener{
	static JFrame frame;
	private Image img;
	private int imgWidth;
	private int imgHeight;
	int x = 0;
	int y = 0;
	double dy = 1;// speed
	double dx = 1;
	
	private BackgroundPanel() {
		ImageIcon i = new ImageIcon("src/background.jpg");
		img = i.getImage();
		imgWidth = img.getWidth(null);
		imgHeight = img.getHeight(null);
		
	}
	
	public int getWidth() {
		return imgWidth;
	}
	
	public int getHeight() {
		return imgHeight;
	}
	
	public void paintComponent(Graphics g) {
		super.paintComponent(g);
		Graphics2D g2d = (Graphics2D) g;
		g2d.drawImage(img,  x,  y,  null);
		g2d.drawImage(img,  x - imgWidth,  y,  null);
	}
	
	public void setupWindow(BackgroundPanel  panel) {
		frame.setSize(panel.getWidth(), panel.getHeight());
		frame.setLocationRelativeTo(null);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.add(panel);
		frame.setResizable(false);
		frame.setVisible(true);
		startTimer();
	}
	public static void main(String[] args) {
		frame = new JFrame("Background");
		BackgroundPanel panel = new BackgroundPanel();
		panel.setupWindow(panel);
	}
	public void startTimer() {
		Timer t = new Timer(5, this);
		t.start();
	}
	public void actionPerformed(ActionEvent e) {
		x += (int) dx;
		y += (int) dy;
		if (x >= imgWidth) {
			x = x - imgWidth;
		}
		
		if (y >= imgWidth) {
			y = y - imgWidth;
		}
		
		frame.repaint();
	}

	public void keyTyped(KeyEvent e) {
		char key = e.getKeyChar();
		switch(key) {
			case 37://37 is the char code for Left arrow. 38-49 is up, right, down, in that order.
				dx = -dx;
				break;
		}
		
	}

	public void keyPressed(KeyEvent e) {
		// TODO Auto-generated method stub
		
	}

	public void keyReleased(KeyEvent e) {
		// TODO Auto-generated method stub
		
	}
	
	
	
}
