 * Purpose: Clickable Button in a window
 */

package basicSwing;

import java.awt.*;
import java.awt.event.*;

import javax.swing.*;

public class ClickableButton implements ActionListener {

	private JButton trueButton;
	private JButton falseButton;
	private JButton exitButton;
	private JButton title1Button;
	private JButton title2Button;
	private JButton resize1Button;
	private JButton resize2Button;
	private JFrame frame;

	public static void main(String[] args) {
		ClickableButton window = new ClickableButton();
		window.setupWindow();

	}

	public void actionPerformed(ActionEvent e) {
		// get the source of the button and see if it is the same.

		if (e.getSource() == trueButton) {
			System.out.println("You are right!");
		} else if (e.getSource() == falseButton) {
			System.out.println("You are right!");
		} else if (e.getSource() == exitButton) {
			System.exit(0);
		}
	}

	public void setupWindow() {
		 frame= new JFrame("Clickable Button Window");
		JPanel panel = new JPanel();
		panel.setLayout(new FlowLayout());

		JButton trueButton = new JButton("True");

		// this class is the action listener for this button
		trueButton.addActionListener(this);
		panel.add(trueButton);

		falseButton = new JButton("False");
		trueButton.addActionListener(this);
		panel.add(falseButton);

		exitButton = new JButton("Exit");
		exitButton.addActionListener(this);
		panel.add(exitButton);

		title1Button = new JButton("Change title to 'Hi'");
		title1Button.addActionListener(this);
		panel.add(title1Button);

		title2Button = new JButton("Change title to 'Bye'");
		title2Button.addActionListener(this);
		panel.add(title2Button);

		resize1Button = new JButton("Resize to 300x500");
		resize1Button.addActionListener(this);
		panel.add(resize1Button);

		resize2Button = new JButton("Resize to 500x300");
		resize2Button.addActionListener(this);
		panel.add(resize2Button);

		frame.add(panel, "Center");
		frame.setSize(400, 500);
		frame.setLocationRelativeTo(null);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);

	}

}
