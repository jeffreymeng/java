package cardGame;

public class DisplayCards {
	
	public DisplayCards() {
		
	}
	
	public void showCard(boolean black) {
		String color = "BLACK";
		if (!black) color = " RED "
		System.out.println("┌-------------┐");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|     RED     |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("└-------------┘");
	}
}
