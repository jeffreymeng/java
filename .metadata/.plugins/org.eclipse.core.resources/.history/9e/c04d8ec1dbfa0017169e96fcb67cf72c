package cardGame;

public class DisplayCards {
	
	public DisplayCards() {
		
	}
	
	public void showCard(boolean black) {
		String color = "BLACK";
		if (!black) color = " RED ";
		System.out.println("┌-------------┐");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|    " + color + "    |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("└-------------┘");
	}
	public void showCardArr(boolean[] black) {
		String color = "BLACK";
		if (!black[0]) color = " RED ";
		System.out.println("┌-------------┐		┌-------------┐		┌-------------┐		┌-------------┐");
		System.out.println("|             |		|             |		|             |		|             |");
		System.out.println("|             |		|             |		|             |		|             |");
		System.out.println("|             |		|             |		|             |		|             |");
		System.out.println("|             |		|             |		|             |		|             |");
		System.out.println("|    " + color + "    |		|    " + color + "    |		|    " + color + "    |		|    " + color + "    |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("|             |");
		System.out.println("└-------------┘");
	}
}
