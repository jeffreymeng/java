package commandLine;

import java.util.Scanner;

public class EquationSolver {

	public static void main(String[] args) {
		System.out.println("============ Jeffrey Command Line ============");
		System.out.println("Initalizing...");
		String command;
		Scanner in = new Scanner(System.in);

		System.out.println("Initalization Complete");
		System.out.println("============ Jeffrey Command Line ============");
		System.out.println("Feature of the day - Equation solver(Free)");
		do {

			System.out.println("Enter help, quit or any avaliable command:");
			command = in.nextLine();
			switch (command) {
			case "help":
				System.out.println("Help\n========\nFor more detailed information on a command, "
						+ "enter the command name and pass --help as an argument(commnad --help)"
						+ "\nAvaliable Commands:");
				//download
				System.out.println("Download: license and download a feature to your account");
			}
		} while (command != "quit");

	}

}
