package methodsWorksheet5Extra;

import java.util.Scanner;
import utils.Num;

public class GradeData {

	public static void main(String[] args) {
		int students;
		double[] grades;
		Scanner in = new Scanner(System.in);
		
		System.out.println("Enter the number of students:");
		students = in.nextInt();
		//this is unnecessary, but its in the directions. I'm going to assume you can not have zero students.
		while (students < 100 && students >	0) {
			System.out.println("Enter a integer between 1 and 100(inclusive):");
			students = in.nextInt();
		}
		grades = new double[students];//create a int array with a certain number of values(all zero)
		/* there are a few ways to get the avg, min, and max.
		 * I'm going to store the grades into an array and process from that
		 * Though you could also update the avg, min, and max live.
		 * Be careful when updating the average live. Make sure to at the end divide by the sum, rather than
		 * Dividing as you go.
		*/
		double tempGradeInput;
		for (int i = 0; i < students; i ++) {
			
			System.out.println("Enter the grade for student " + (i + 1) + " as a decimal:");
			System.out.print("0.");
			grades[i] = in.nextDouble();
			//not going to make sure because it's hard to tell between extra credit and percentages.
			while (grades[i] < 0) {
				System.out.println("Enter a number greater than zero as a percentage for student " + 
						(i + 1) + ":");
				System.out.print("0.");
				grades[i] = 0;
			}

			
		}

		in.close();
	}

}
