package box;

public class Box {
	private int height, width, length;
	private String name, units;
	
	public Box(int length, int width, int height, String units, String name) {
		this.length = length;
		this.height = height;
		this.width = width;
		this.units = units;
		this.name = name;
	}
	
	public int getVolume() {
		//Not going to return unit because it becomes harder to manuiplate the number if you have 
		//to extract it from a string. Instead, add a method to get the unit.
		return (length * height * width);
	}
	
}
