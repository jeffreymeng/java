package graphics;

import java.awt.*;

import javax.swing.*;

public class GraphicsPanel extends JPanel{
	
	public void paintComponent(Graphics graphics) {
		super.paintComponent(graphics);
		System.out.println(Color.RED);
		graphics.setColor(Color.RED);
		graphics.fillRect(10, 10, 200, 100);
		graphics.setColor(Color.BLUE);
		graphics.drawRect(250, 10, 100, 150);
		graphics.setColor(Color.GREEN);
		graphics.drawOval(10, 200, 100, 100);
		graphics.fillOval(250, 200, 150, 100);
		graphics.setColor(Color.BLACK);
		graphics.drawLine(0, 175, 600, 175);
		
	}
	
	public void setupWindow(GraphicsPanel panel) {
		JFrame frame = new JFrame("Main Frame");
		
		frame.setSize(800, 600);
		frame.setLocationRelativeTo(null);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.add(panel);
		frame.setVisible(true);
	}
	
	public static void main(String[] args) {
		GraphicsPanel panel = new GraphicsPanel();
		panel.setupWindow(panel);
		

	}

}
