 * Purpose: Allow the user to flip a coin, then analyze the result.
 */

package eclipseQuiz;

import java.util.Scanner;

public class EclipseQuiz {

	public static void main(String[] args) {
		int flips, heads;// Whether or not the flip is heads(1 for heads, 0 for
							// tales)
		double headCount, tailCount;
		Scanner in = new Scanner(System.in);

		System.out.print("How many flips to analyze? ");
		flips = in.nextInt();
		System.out.print("\n");

		// loop the amount of times the user requested.
		for (int i = 0; i < flips; i++) {
			heads = (int) (Math.random() * 1) + 0;
			System.out.println(i + ". Flip coin and enter result (H or T) #"
					+ i + ": " + (heads == 1 ? "H" : "T"));
		}

		in.close();

	}

}
